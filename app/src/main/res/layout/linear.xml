<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subheader"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/rowNational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/nationalNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nationalNumber"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/nationalInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="number"
                android:text="@string/defaultNumber"
                android:paddingVertical="8dp"
                android:ems="6"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/nameInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="textCapWords"
                android:text="@string/defaultName"
                android:ems="10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/species"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/species"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/speciesInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="textCapWords"
                android:text="@string/defaultSpecies"
                android:ems="12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/genderMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genderMale"/>
                <RadioButton
                    android:id="@+id/genderFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genderFemale"
                    android:layout_marginStart="8dp"/>
                <RadioButton
                    android:id="@+id/genderUNK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultGender"
                    android:layout_marginStart="8dp"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

</ScrollView>